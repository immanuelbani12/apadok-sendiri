<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/title_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:text="Judul Artikel"
                android:textColor="@color/black_font"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="image"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                tools:src="@drawable/default_image" />

            <TextView
                android:id="@+id/diabetes_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="35dp"
                android:text="Kategori:"
                android:textColor="@color/black_font"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diabetes_title"
                android:drawableLeft="@drawable/ic_baseline_opacity_24"
                android:paddingLeft="15dp"
                android:drawablePadding="5dp"
                android:text="Penyakit Diabetes"
                android:textColor="@color/grey_font"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stroke_title"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_brain"
                android:paddingLeft="15dp"
                android:text="Penyakit Stroke"
                android:textColor="@color/grey_font"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/cardiovascular_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_baseline_favorite_24"
                android:drawablePadding="5dp"
                android:paddingLeft="15dp"
                android:text="Penyakit Kardiovaskular"
                android:textColor="@color/grey_font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kebugaran_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_baseline_accessibility_new_24"
                android:drawablePadding="5dp"
                android:paddingLeft="15dp"
                android:text="Kebugaran"
                android:textColor="@color/grey_font"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
