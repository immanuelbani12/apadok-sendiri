<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange_main"
    android:id="@+id/toolbar">


    <RelativeLayout
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_cliniclogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/apadok_white_crop" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/first_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_clinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/clinic_name"
                android:textColor="@color/white"
                android:textSize="20sp" />

<!--            <ImageView-->
<!--                android:id="@+id/logout_icon"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:rotation="180"-->
<!--                android:src="@drawable/ic_baseline_login_24" />-->

            <ImageView
                android:id="@+id/option_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:onClick="showPopUp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/first_row_layout">

            <ImageView
                android:layout_width="114dp"
                android:layout_height="15dp"
                android:src="@drawable/by_apadok" />
        </LinearLayout>
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>