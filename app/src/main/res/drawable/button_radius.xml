<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="@color/teal_blue" />
            <gradient android:angle="-90" android:startColor="@color/blue_main" android:endColor="@color/half_baked" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="3dip" android:color="@color/teal_blue" />
            <solid android:color="@color/blue_main"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="@color/teal_blue" />
            <solid android:color="@color/boston_blue"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="@color/teal_blue" />
            <solid android:color="@color/blue_main"/>
<!--            <gradient android:angle="-90" android:startColor="@color/chathams_blue" android:endColor="@color/boston_blue"  />-->
        </shape>
    </item>
</selector>